@using GestionPlazasVacantes.Models
@model GestionPlazasVacantes.DTOs.PlazaDto

@{
    ViewData["Title"] = "Formulario de Creación de Plaza Vacante";
}



<div class="formulario-plaza">
    <h4><i class="bi bi-clipboard2-check me-2"></i>Formulario de Creación de Plaza Vacante</h4>
    <p class="subtitle">Complete los datos solicitados cuidadosamente antes de guardar.</p>

    <form asp-action="Crear" method="post" class="needs-validation" novalidate>
        @Html.AntiForgeryToken()

        <!-- Encabezado del concurso -->
        <div class="encabezado-concurso">
            <div class="row g-3 align-items-center justify-content-center">
                <div class="col-md-4">
                    <label asp-for="TipoConcurso"></label>
                    <select asp-for="TipoConcurso"
                            class="form-select"
                            asp-items="Html.GetEnumSelectList<TipoConcursoEnum>()">
                    </select>
                    <span asp-validation-for="TipoConcurso" class="text-danger"></span>
                    @* <select asp-for="TipoConcurso" class="form-select" required>
                        <option value="">Seleccione...</option>
                        <option value="Interno">Interno</option>
                        <option value="Externo">Externo</option>
                    </select>
                    <span asp-validation-for="TipoConcurso" class="text-danger"></span> *@
                </div>

                <div class="col-md-4">
                    <label asp-for="NumeroConcurso"></label>
                    <input asp-for="NumeroConcurso" class="form-control" placeholder="Ej. 04-2025" />
                    <span asp-validation-for="NumeroConcurso" class="text-danger"></span>
                </div>
            </div>

            <div id="previewConcurso" class="mt-4">
                <h5 id="tituloConcurso">CONCURSO N° —</h5>
                <p>Requiere contratar los servicios de:</p>
            </div>
        </div>

        <!-- Sección 1 -->
        <div class="seccion">
            <h5>1️⃣ Información General</h5>
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Titulo"></label>
                    <input asp-for="Titulo" class="form-control" placeholder="Ejemplo: Ingeniero Civil" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Departamento"></label>
                    <input asp-for="Departamento" class="form-control" placeholder="Ejemplo: Obras Públicas" />
                </div>
            </div>
        </div>

        <!-- Sección 2 -->
        <div class="seccion">
            <h5>2️⃣ Condiciones del Puesto</h5>
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="SalarioCompuesto"></label>
                    <input asp-for="SalarioCompuesto" type="number" step="0.01" class="form-control" placeholder="Ejemplo: 850000.50" />
                    <span asp-validation-for="SalarioCompuesto" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="SalarioGlobal"></label>
                    <input asp-for="SalarioGlobal" type="number" step="0.01" class="form-control" placeholder="Ejemplo: 1050000.75" />
                    <span asp-validation-for="SalarioGlobal" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Horario"></label>
                    <input asp-for="Horario" class="form-control" placeholder="Lunes a Viernes, 8:00 a.m. - 4:00 p.m." />
                </div>
                <div class="col-md-6">
                    <label asp-for="FechaLimite"></label>
                    <input asp-for="FechaLimite" type="datetime-local" class="form-control" />
                    <span asp-validation-for="FechaLimite" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Sección 3 -->
        <div class="seccion">
            <h5>3️⃣ Requisitos y Observaciones</h5>
            <div class="row">
                <div class="col-12">
                    <label asp-for="Requisitos"></label>
                    <textarea asp-for="Requisitos" class="form-control" rows="5" placeholder="Describa los requisitos principales..."></textarea>
                    <span asp-validation-for="Requisitos" class="text-danger"></span>
                </div>
                <div class="col-12 mt-3">
                    <label asp-for="Observaciones"></label>
                    <textarea asp-for="Observaciones" class="form-control" rows="3" placeholder="Ejemplo: Se valorará experiencia en gestión pública."></textarea>
                </div>
            </div>
        </div>

        <!-- Sección 4 -->
        <div class="seccion">
            <h5>4️⃣ Documentos que se solicitarán al postulante</h5>
            <p class="text-muted mb-4">Seleccione los documentos que el postulante deberá adjuntar. Puede marcar si son obligatorios o no.</p>

            <div class="row gy-3">
                <!-- Colegiatura -->
                <div class="col-md-6">
                    <div class="card p-3 border-0 shadow-sm h-100" style="background:#ffffff;">
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="chkColegiado" name="SolicitarColegiatura" value="true">
                            <label class="form-check-label fw-semibold" style="color:#435563;" for="chkColegiado">
                                Solicitar número y foto de colegiatura
                            </label>
                        </div>
                        <div id="obliCole" class="form-check d-none">
                            <input class="form-check-input" type="checkbox" name="ColegiaturaObligatoria" value="true">
                            <label class="form-check-label text-danger fw-semibold">Requisito obligatorio</label>
                        </div>
                    </div>
                </div>

                <!-- Licencia -->
                <div class="col-md-6">
                    <div class="card p-3 border-0 shadow-sm h-100" style="background:#ffffff;">
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="chkLicencia" name="SolicitarLicencia" value="true">
                            <label class="form-check-label fw-semibold" style="color:#435563;" for="chkLicencia">
                                Solicitar tipo y foto de licencia de conducir
                            </label>
                        </div>
                        <div id="obliLic" class="form-check d-none">
                            <input class="form-check-input" type="checkbox" name="LicenciaObligatoria" value="true">
                            <label class="form-check-label text-danger fw-semibold">Requisito obligatorio</label>
                        </div>
                    </div>
                </div>

                <!-- Armas -->
                <div class="col-md-6">
                    <div class="card p-3 border-0 shadow-sm h-100" style="background:#ffffff;">
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="chkArmas" name="SolicitarPermisoArmas" value="true">
                            <label class="form-check-label fw-semibold" style="color:#435563;" for="chkArmas">
                                Solicitar número y foto del permiso de portación de armas
                            </label>
                        </div>
                        <div id="obliArmas" class="form-check d-none">
                            <input class="form-check-input" type="checkbox" name="ArmasObligatorio" value="true">
                            <label class="form-check-label text-danger fw-semibold">Requisito obligatorio</label>
                        </div>
                    </div>
                </div>

                <!-- Títulos -->
                <div class="col-md-6">
                    <div class="card p-3 border-0 shadow-sm h-100" style="background:#ffffff;">
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="chkTitulos" name="SolicitarTitulos" value="true">
                            <label class="form-check-label fw-semibold" style="color:#435563;" for="chkTitulos">
                                Solicitar títulos o certificaciones con foto
                            </label>
                        </div>
                        <div id="obliTit" class="form-check d-none">
                            <input class="form-check-input" type="checkbox" name="TitulosObligatorios" value="true">
                            <label class="form-check-label text-danger fw-semibold">Requisito obligatorio</label>
                        </div>

                        <div id="divTitulos" class="mt-3 d-none">
                            <label class="fw-semibold mb-1" style="color:#435563;">Especifique los títulos o certificaciones requeridas</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="botones-formulario mt-4">
            <button type="reset" class="btn-limpiar">
                <i class="bi bi-x-circle"></i> Limpiar
            </button>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check2-circle"></i> Guardar Plaza
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Actualiza el encabezado en tiempo real
        const tipo = document.getElementById('TipoConcurso');
        const numero = document.getElementById('NumeroConcurso');
        const titulo = document.getElementById('tituloConcurso');

        function actualizarTitulo() {
            const tipoTexto = tipo.value ? tipo.value.toUpperCase() : "—";
            const numTexto = numero.value || "—";
            titulo.textContent = `CONCURSO ${tipoTexto} N° ${numTexto}`;
        }

        tipo.addEventListener('change', actualizarTitulo);
        numero.addEventListener('input', actualizarTitulo);

        // Validación visual con Bootstrap
        (() => {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
            document.querySelector('form').addEventListener('submit', e => {
                document.querySelectorAll('input[type="number"]').forEach(inp => {
                    inp.value = inp.value.replace(/,/g, '');
                });
            });
        })();

        // Mostrar/ocultar opciones de documentos según checkboxes
        document.getElementById('chkColegiado').addEventListener('change', function() {
            document.getElementById('obliCole').classList.toggle('d-none', !this.checked);
        });

        document.getElementById('chkLicencia').addEventListener('change', function() {
            document.getElementById('obliLic').classList.toggle('d-none', !this.checked);
        });

        document.getElementById('chkArmas').addEventListener('change', function() {
            document.getElementById('obliArmas').classList.toggle('d-none', !this.checked);
        });

        document.getElementById('chkTitulos').addEventListener('change', function() {
            document.getElementById('obliTit').classList.toggle('d-none', !this.checked);
            document.getElementById('divTitulos').classList.toggle('d-none', !this.checked);
        });
    </script>
}
