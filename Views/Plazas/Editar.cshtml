@using GestionPlazasVacantes.Models
@model GestionPlazasVacantes.Models.PlazaVacante

@{
    ViewData["Title"] = "Editar Plaza Vacante";
}



<div class="formulario-plaza">
    <h4><i class="bi bi-pencil-square me-2"></i>Editar Plaza Vacante</h4>
    <p class="subtitle">Actualice los campos necesarios y guarde los cambios.</p>

    <form asp-action="Editar" method="post" class="needs-validation" novalidate>
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <!-- Encabezado del concurso -->
        <div class="encabezado-concurso">
            <div class="row g-3 align-items-center justify-content-center">
                <div class="col-md-4">
                    <label asp-for="TipoConcurso"></label>
                    <select asp-for="TipoConcurso"
                            class="form-select"
                            asp-items="Html.GetEnumSelectList<TipoConcursoEnum>()">
                    </select>
                    <span asp-validation-for="TipoConcurso" class="text-danger"></span>
                    @* <select asp-for="TipoConcurso" class="form-select" required>
                        <option value="">Seleccione...</option>
                        <option value="Interno">Interno</option>
                        <option value="Externo">Externo</option>
                    </select>
                    <span asp-validation-for="TipoConcurso" class="text-danger"></span> *@
                </div>

                <div class="col-md-4">
                    <label asp-for="NumeroConcurso"></label>
                    <input asp-for="NumeroConcurso" class="form-control" placeholder="Ej. 04-2025" />
                    <span asp-validation-for="NumeroConcurso" class="text-danger"></span>
                </div>
            </div>

            <div id="previewConcurso" class="mt-4">
                <h5 id="tituloConcurso">CONCURSO @Model.TipoConcurso.ToString().ToUpper() N° @Model.NumeroConcurso</h5>
                <p>Requiere contratar los servicios de:</p>
            </div>
        </div>

        <!-- Sección 1 -->
        <div class="seccion">
            <h5>1️⃣ Información General</h5>
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Titulo"></label>
                    <input asp-for="Titulo" class="form-control" placeholder="Ejemplo: Ingeniero Civil" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Departamento"></label>
                    <input asp-for="Departamento" class="form-control" placeholder="Ejemplo: Obras Públicas" />
                </div>
            </div>
        </div>

        <!-- Sección 2 -->
        <div class="seccion">
            <h5>2️⃣ Condiciones del Puesto</h5>
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="SalarioCompuesto"></label>
                    <input asp-for="SalarioCompuesto" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="SalarioCompuesto" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="SalarioGlobal"></label>
                    <input asp-for="SalarioGlobal" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="SalarioGlobal" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Horario"></label>
                    <input asp-for="Horario" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="FechaLimite"></label>
                    <input asp-for="FechaLimite" type="datetime-local" class="form-control"
                           value="@Model.FechaLimite.ToString("yyyy-MM-ddTHH:mm")" />
                    <span asp-validation-for="FechaLimite" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Sección 3 -->
        <div class="seccion">
            <h5>3️⃣ Requisitos y Observaciones</h5>
            <div class="row">
                <div class="col-12">
                    <label asp-for="Requisitos"></label>
                    <textarea asp-for="Requisitos" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Requisitos" class="text-danger"></span>
                </div>
                <div class="col-12 mt-3">
                    <label asp-for="Observaciones"></label>
                    <textarea asp-for="Observaciones" class="form-control" rows="3"></textarea>
                </div>
            </div>
        </div>

        <!-- Sección 4 -->
        <div class="seccion">
            <h5>4️⃣ Requisitos Especiales</h5>

            <div class="form-check">
                <input asp-for="SolicitarColegiatura" class="form-check-input" />
                <label asp-for="SolicitarColegiatura" class="form-check-label"></label>
            </div>

            <div class="form-check">
                <input asp-for="ColegiaturaObligatoria" class="form-check-input" />
                <label asp-for="ColegiaturaObligatoria" class="form-check-label"></label>
            </div>

            <!-- repetir para los demás -->
        </div>

        <div class="botones-formulario mt-4">
            <a asp-action="Index" class="btn-cancelar">
                <i class="bi bi-arrow-left-circle"></i> Cancelar
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save2"></i> Guardar Cambios
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Actualiza el encabezado dinámicamente
        const tipo = document.getElementById('TipoConcurso');
        const numero = document.getElementById('NumeroConcurso');
        const titulo = document.getElementById('tituloConcurso');

        function actualizarTitulo() {
            const tipoTexto = tipo.value ? tipo.value.toUpperCase() : "—";
            const numTexto = numero.value || "—";
            titulo.textContent = `CONCURSO ${tipoTexto} N° ${numTexto}`;
        }

        tipo.addEventListener('change', actualizarTitulo);
        numero.addEventListener('input', actualizarTitulo);
    </script>
}
