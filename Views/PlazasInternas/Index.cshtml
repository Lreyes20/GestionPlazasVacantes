@model IEnumerable<GestionPlazasVacantes.Models.PlazaVacante>

@{
    ViewData["Title"] = "Plazas Internas";
    var plazasVigentes = Model.Where(p => p.FechaLimite > DateTime.Now && p.TipoConcurso == "Interno").ToList();
}

<style>
    /* ===== GRID DE TARJETAS ===== */
    .plaza-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.2rem;
        justify-items: start;
        margin: 1.5rem 0;
        font-family: 'Biryani', Verdana, sans-serif;
    }

    /* ===== TARJETA ===== */
    .plaza-card {
        background-color: #ffffff;
        border-radius: 0.75rem;
        padding: 1.2rem;
        box-shadow: 0 3px 18px rgba(0, 0, 0, 0.08);
        border-top: 5px solid #FF8200; /* Naranja institucional */
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        transition: all 0.25s ease-in-out;
        width: 100%;
        max-width: 360px;
        min-height: 380px;
        color: #435563; /* Gris urbano */
    }

        .plaza-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 6px 25px rgba(0, 0, 0, 0.12);
        }

        .plaza-card h5 {
            color: #435563;
            font-weight: 700;
            font-size: 1rem;
            margin-bottom: 0.5rem;
            text-transform: capitalize;
        }

        .plaza-card .subtitulo {
            font-size: 0.85rem;
            color: #6c757d;
            margin-bottom: 0.8rem;
        }

        .plaza-card p {
            font-size: 0.9rem;
            margin-bottom: 0.3rem;
            color: #435563;
            line-height: 1.3;
        }

        .plaza-card strong {
            color: #FF8200; /* Naranja Mariola */
        }

    /* ===== BLOQUES DE INFO ===== */
    .bloque {
        background-color: #F8F9FA;
        padding: 0.6rem 0.8rem;
        border-radius: 0.4rem;
        margin-top: 0.6rem;
        font-size: 0.88rem;
    }

        .bloque strong {
            display: block;
            color: #435563;
            margin-bottom: 0.3rem;
        }

    /* ===== BOTÓN POSTULARME ===== */
    .btn-postularme {
        background: linear-gradient(90deg, #FF8200 0%, #E66F00 100%);
        border: none;
        color: white;
        border-radius: 0.5rem;
        padding: 0.55rem 1rem;
        font-weight: 700;
        transition: transform 0.2s ease;
        text-align: center;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.4rem;
        font-size: 0.9rem;
        letter-spacing: 0.3px;
    }

        .btn-postularme:hover {
            transform: scale(1.04);
            background: linear-gradient(90deg, #E66F00 0%, #CC5F00 100%);
        }

    /* ===== ENCABEZADO ===== */
    .titulo-pagina {
        color: #435563;
        text-align: left;
        margin-top: 1.5rem;
        font-weight: 700;
        margin-left: 0.5rem;
        font-size: 1.5rem;
    }

        .titulo-pagina::before {
            content: "🏢 ";
        }

    .no-plazas {
        text-align: center;
        color: #6c757d;
        font-size: 1.1rem;
        margin-top: 2rem;
        font-family: 'Biryani', Verdana, sans-serif;
    }

    /* ===== DESCRIPCIÓN ===== */
    .descripcion {
        color: #6c757d;
        font-size: 0.95rem;
        margin-left: 0.6rem;
        font-family: 'Biryani', Verdana, sans-serif;
    }

    /* ===== RESPONSIVE ===== */
    @@media (min-width: 1200px) {
        .plaza-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    @@media (max-width: 991px) {
        .plaza-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @@media (max-width: 576px) {
        .plaza-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="container-fluid px-4">
    <h2 class="titulo-pagina">Plazas Internas Vigentes</h2>
    <p class="descripcion">
        Estas plazas están disponibles exclusivamente para funcionarios institucionales, según la normativa vigente.
    </p>

    @if (!plazasVigentes.Any())
    {
        <p class="no-plazas">🚫 No hay plazas internas vigentes en este momento.</p>
    }
    else
    {
        <div class="plaza-grid">
            @foreach (var plaza in plazasVigentes)
            {
                <div class="plaza-card">
                    <div>
                        <h5>@plaza.Titulo</h5>
                        <p class="subtitulo">
                            <i class="bi bi-lock"></i> Concurso Interno Nº @plaza.NumeroConcurso
                        </p>

                        <p><strong>Depto.:</strong> @plaza.Departamento</p>
                        <p><strong>Horario:</strong> @plaza.Horario</p>

                        <div class="bloque">
                            <strong>Requisitos:</strong>
                            <p>@plaza.Requisitos</p>
                        </div>

                        @if (!string.IsNullOrEmpty(plaza.Observaciones))
                        {
                            <div class="bloque">
                                <strong>Observaciones:</strong>
                                <p>@plaza.Observaciones</p>
                            </div>
                        }

                        <div class="bloque">
                            <strong>Salario:</strong>
                            <p>Compuesto: ₡@plaza.SalarioCompuesto.ToString("N2")</p>
                            <p>Global: ₡@plaza.SalarioGlobal.ToString("N2")</p>
                        </div>

                        <div class="bloque">
                            <strong>Fecha y hora límite:</strong>
                            <p>📅 @plaza.FechaLimite.ToString("dd/MM/yyyy")</p>
                            <p>🕒 @plaza.FechaLimite.ToString("hh:mm tt")</p>
                        </div>

                        <p class="text-muted mt-2">
                            <small>📅 Publicada el @plaza.FechaCreacion.ToString("dd/MM/yyyy") a las @plaza.FechaCreacion.ToString("hh:mm tt")</small>
                        </p>
                    </div>

                    <div class="acciones mt-2">
                        <a asp-controller="PlazasInternas" asp-action="Aplicar" asp-route-id="@plaza.Id"
                           class="btn btn-postularme w-100">
                            <i class="bi bi-pencil-square"></i> Postularme
                        </a>
                    </div>
                </div>
            }
        </div>
    }
</div>
