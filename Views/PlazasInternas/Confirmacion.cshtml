        </div>
        <h2>Hubo un problema con tu postulación</h2>
        <p>@TempData["ErrorMessage"]</p>
    }
    else
    {
        <div class="icono-exito d-print-none">
            <i class="bi bi-check-circle-fill"></i>
        </div>
        <h2 class="d-print-none">¡Tu postulación fue enviada con éxito!</h2>
        
        <!-- COMPROBANTE DE RECIBIDO (Visible en Pantalla e Impresión) -->
        <div class="text-start mt-4 border p-4 rounded bg-light" id="comprobante-detalles">
            <div class="text-center mb-4">
               <h4 style="color:#FF8200; font-weight:700;">COMPROBANTE DE POSTULACIÓN INTERNA</h4>
               <p class="text-muted small">Municipalidad de Curridabat</p>
        </div>

        <p class="d-print-none mt-3">
            Gracias por aplicar. Tu solicitud ha sido registrada correctamente.
            Conserve este comprobante para sus registros.
        </p>
        
        <div class="d-flex justify-content-center gap-3 mt-4 d-print-none">
            <button onclick="window.print()" class="btn btn-outline-secondary">
                <i class="bi bi-printer"></i> Imprimir Comprobante
            </button>
        </div>
    }


    <a asp-controller="Postulacion" asp-action="Index" class="btn btn-primary">
        <i class="bi bi-arrow-left-circle"></i> Volver al listado de plazas
    </a>

    <p class="text-muted small mt-4">
        Municipalidad de Curridabat · Gestión de Plazas Vacantes © 2025
    </p>
</div>
