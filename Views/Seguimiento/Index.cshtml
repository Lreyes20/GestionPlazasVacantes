@model IEnumerable<GestionPlazasVacantes.Models.PlazaVacante>

@{
    ViewData["Title"] = "Seguimiento de Plazas";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />



<div class="container">
    <h2><i class="bi bi-briefcase"></i> Seguimiento de Plazas</h2>

    <!-- 🔹 Mensajes de confirmación -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
        </div>
    }

    <!-- 🔹 Contenido -->
    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle"></i> No hay plazas disponibles para seguimiento.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var p in Model)
            {
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <h5><i class="bi bi-clipboard-check"></i> @p.Titulo</h5>
                                <p class="text-muted">
                                    <i class="bi bi-building"></i> @p.Departamento
                                </p>
                                <p>
                                    <i class="bi bi-calendar-x"></i> Cerró:
                                    <strong>@p.FechaLimite.ToString("dd/MM/yyyy HH:mm")</strong>
                                </p>
                                <p>
                                    <i class="bi bi-info-circle"></i> Estado:
                                    <span class="fw-semibold text-success">@p.EstadoFinal</span>
                                </p>
                                
                                @* Indicador de usuario asignado *@
                                @if (p.UsuarioAsignado != null)
                                {
                                    <p>
                                        <i class="bi bi-person-check"></i> Asignado a:
                                        <span class="badge bg-success">@p.UsuarioAsignado.FullName</span>
                                    </p>
                                }
                                else
                                {
                                    <p>
                                        <i class="bi bi-exclamation-triangle"></i>
                                        <span class="badge bg-warning text-dark">Sin asignar</span>
                                    </p>
                                }
                            </div>

                            <div class="mt-3">
                                <a href="@Url.Action("PorPlaza", "Seguimiento", new { plazaId = p.Id })"
                                   class="btn btn-outline-primary w-100">
                                    <i class="bi bi-people"></i> Ver postulantes
                                </a>

                                <form asp-action="EliminarPlaza" asp-controller="Seguimiento" method="post" class="mt-2"
                                      onsubmit="return confirm('⚠️ ¿Seguro que deseas eliminar esta plaza? Esta acción no se puede deshacer.');">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="plazaId" value="@p.Id" />
                                    <button type="submit" class="btn btn-danger w-100">
                                        <i class="bi bi-trash"></i> Eliminar plaza
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
