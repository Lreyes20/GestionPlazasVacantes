@model GestionPlazasVacantes.Controllers.ReporteViewModel

@{
    ViewData["Title"] = "Reportes de Plazas";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="mb-3 report-header">
                <i class="bi bi-file-earmark-bar-graph text-orange"></i> Reportes y Estad칤sticas
            </h2>
            <p class="text-muted">
                Busca una plaza por su n칰mero de concurso para ver las estad칤sticas del proceso de selecci칩n.
            </p>
        </div>
    </div>

    <!-- 游댌 Buscador -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" asp-action="Index" class="row g-3 align-items-end">
                <div class="col-md-6">
                    <label for="numeroConcurso" class="form-label fw-bold">N칰mero de Concurso</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="bi bi-search"></i></span>
                        <input type="text" class="form-control" id="numeroConcurso" name="numeroConcurso" 
                               placeholder="Ej: INT-2024-001" value="@Context.Request.Query["numeroConcurso"]" required>
                    </div>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100 btn-orange">
                        Buscar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- 游늶 Listado de todos los concursos -->
    @if (Model != null && Model.PlazasDisponibles.Any())
    {
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="bi bi-list-ul"></i> Historial de Concursos</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Concurso</th>
                                <th>T칤tulo</th>
                                <th>Departamento</th>
                                <th>Analista Asignado</th>
                                <th>Estado</th>
                                <th>Acci칩n</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var p in Model.PlazasDisponibles)
                            {
                                <tr>
                                    <td class="fw-bold">@p.NumeroConcurso</td>
                                    <td>@p.Titulo</td>
                                    <td>@p.Departamento</td>
                                    <td>
                                        @if (p.UsuarioAsignado != null)
                                        {
                                            <span class="text-primary">
                                                <i class="bi bi-person-badge"></i> @p.UsuarioAsignado.FullName
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">
                                                <i class="bi bi-dash-circle"></i> Sin asignar
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (p.EstadoFinal == "Finalizada")
                                        {
                                            <span class="badge bg-secondary">Finalizada</span>
                                        }
                                        else if (p.Activa)
                                        {
                                            <span class="badge bg-success">Activa</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">@p.EstadoFinal</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Detalle" asp-route-id="@p.Id" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i> Ver Reporte
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            <pre class="text-pre-wrap">@ViewBag.Error</pre>
        </div>
    }

    <!-- 游뛂 Se elimin칩 la secci칩n de detalles de aqu칤, ahora est치 en la vista Detalle.cshtml -->
</div>
